@model Hospital_Desafio.Models.Medicos

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes</h2>

<div>
    <h4>Medicos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PrimeiroNome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PrimeiroNome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ColecaoDate)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Nome da Clinica</th>
                    <th>Estrelas</th>
                </tr>
                @foreach(var item in Model.Colecaos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(ModelItem => item.Clinicas.NomeClinica)
                        </td>
                        <td>
                            @Html.DisplayFor(ModelItem => item.Clinicas.Estrelas)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
